<div><%= @profile.name %></div>
<div><%= @profile.user_name %></div>
<div><%= @profile.contact_no %></div>
<div><%= @profile.email %></div>
<%= link_to "edit", edit_profile_path(@profile) %>
<% if @providers.present? and @providers.include?(Site::PROVIDERS[:github]) %>
    <%= link_to "View Github Info", github_profile_path, :class => "btn btn-primary" %>
<% else %>
    <%= link_to "Authorize GitHub", github_authorize_path, :class => "btn btn-primary" %>
<% end %>
